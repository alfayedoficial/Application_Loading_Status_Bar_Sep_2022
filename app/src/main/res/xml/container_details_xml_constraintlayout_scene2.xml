<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2500">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/file_name_label_text"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/download_status_image"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/download_status_label_text"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/btnOk"
               motion:framePosition="0"
               android:translationX="90dp" />
           <KeyAttribute
               motion:motionTarget="@+id/file_name_label_text"
               motion:framePosition="0"
               android:translationY="80dp" />
           <KeyAttribute
               motion:motionTarget="@+id/btnOk"
               motion:framePosition="0"
               android:translationY="30dp" />
           <KeyAttribute
               motion:motionTarget="@+id/file_name_text"
               motion:framePosition="20"
               android:translationX="30dp" />
           <KeyAttribute
               motion:motionTarget="@+id/file_name_text"
               motion:framePosition="0"
               android:translationX="160dp" />
           <KeyAttribute
               motion:motionTarget="@+id/download_status_text"
               motion:framePosition="0"
               android:translationX="100dp" />
           <KeyAttribute
               motion:motionTarget="@+id/download_status_text"
               motion:framePosition="35"
               android:translationX="130dp" />
           <KeyAttribute
               motion:motionTarget="@+id/download_status_text"
               motion:framePosition="74"
               android:translationX="0dp" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>